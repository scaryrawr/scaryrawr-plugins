{
  "name": "scaryrawr-plugins",
  "owner": {
    "name": "Mike Wallio"
  },
  "plugins": [
    {
      "name": "azure-devops",
      "description": "Azure Plugin for Claude",
      "author": {
        "name": "Mike Wallio"
      },
      "source": "./plugins/azure-devops",
      "category": "development",
      "strict": false
    },
    {
      "name": "typescript-native-lsp",
      "description": "TypeScript/JavaScript language server for enhanced code intelligence",
      "version": "0.0.1",
      "author": {
        "name": "Mike Wallio"
      },
      "source": "./plugins/typescript-native-lsp",
      "category": "development",
      "strict": false,
      "lspServers": {
        "typescript": {
          "command": "tsgo",
          "args": ["--lsp", "--stdio"],
          "extensionToLanguage": {
            ".ts": "typescript",
            ".tsx": "typescriptreact",
            ".js": "javascript",
            ".jsx": "javascriptreact",
            ".mts": "typescript",
            ".cts": "typescript",
            ".mjs": "javascript",
            ".cjs": "javascript"
          }
        }
      }
    },
    {
      "name": "chrome-devtools",
      "description": "Give your AI coding assistant access to the full power of Chrome DevTools for reliable automation, in-depth debugging, and performance analysis.",
      "author": {
        "name": "Google"
      },
      "source": "./external_plugins/devtools",
      "category": "development",
      "strict": false
    }
  ]
}
